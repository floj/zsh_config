update_important_tools() {

  BREW_PACKAGES=(
  burntsushi/ripgrep/ripgrep-bin
  colordiff
  ctags
  diff-so-fancy
  direnv
  exiftool
  ffmpeg
  flvstreamer
  fzf
  git
  imagemagick
  jhead
  jq
  node
  nvm
  openssl
  pstree
  python
  rbenv
  readline
  redis
  ruby-build
  shellcheck
  sqlite
  tig
  unrar
  watch
  yarn
  youtube-dl
  zsh
  )

  BREW_CASKS=(
  kdiff3
  macpass
  )

  NODE_PACKAGES=(
  babel-eslint
  eslint
  gulp
  tslint
  typescript
  webpack
  )

  RUBY_GEMS=(
  bond
  bundler
  haml-lint
  pry
  pry-byebug
  ripper-tags
  rufo
  wirb
  )

  INSTALLED_PACKAGES=$(brew list ${BREW_PACKAGES})

  # If brew list fails there are missing packages
  if [[ "$?" != "0" ]]; then
    echo "${ccyellow}Installing missing homebrew packages${ccend}"
    brew tap burntsushi/ripgrep https://github.com/BurntSushi/ripgrep.git
    brew tap caskroom/cask
    brew install ${BREW_PACKAGES}
    brew cask install ${BREW_CASKS}
  fi

  echo "${ccyellow}Checking homebrew update (updating if more than 3 packages updated)${ccend}"
  brew update
  UPDATES=$(brew outdated | wc -l)
  [[ "${UPDATES}" -ge "3" ]] && brew upgrade && brew install --HEAD macvim

  echo "${ccyellow}Updating rubygems${ccend}"
  gem update --system

  echo "${ccyellow}Installing important gems${ccend}"
  gem install --silent "${RUBY_GEMS}"

  echo "${ccyellow}Installing important JS tools${ccend}"
  yarn global add ${NODE_PACKAGES} --prefer-offline --no-lockfile -s

}
# vim:ft=sh

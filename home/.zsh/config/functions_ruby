# bundle me happy
b() {
  bundle "$@"
}

# run rspec via spring
rspec() {
  if [ -f ./bin/rspec ]; then
    bin/rspec "$@"
  else
    bundle exec rspec "$@"
  fi
}

killruby() {
  kill $(ps | grep puma | awk '{print $1}' | head -n 1) || true
  kill $(ps | grep ruby | awk '{print $1}' | head -n 1)
}

# vim:ft=sh

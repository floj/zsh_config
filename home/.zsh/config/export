export CLICOLOR=1
export LSCOLORS=cxfxexexDxexexDxDxcxcx
export AUTOFEATURE=true #Test Cucumber
export LESS="-mNR" #Line-numbers and ASCII-Colors in less
export EDITOR='mvim -f --nomru -c "au VimLeave * !open -a iTerm"'
export LC_ALL="en_US.UTF-8"

# Show `time` output for any command that takes longer than 1 second of CPU time
export REPORTTIME=1

# Need this to make rvm + homebrew happy
export ARCHFLAGS="-arch x86_64"

# Manpager with ascii-sequences
export MANPAGER=more

export MAVEN_OPTS="-Xms512m -Xmx1024m -XX:MaxPermSize=768m -XX:+CMSClassUnloadingEnabled"


alias ll='ls -la'
alias ..='cd ..'
alias dl='cd ~/Downloads'
alias v='mvim'
alias vim='/usr/local/Cellar/macvim/7.4-76/MacVim.app/Contents/MacOS/Vim'

# Alias gpr to do a rebase (use https://github.com/aanand/git-up)
alias gpr='git-up && git submodule init && git submodule update'
alias master='git checkout master'

# Typos
alias gti="git"

# Start a webserver here
alias serve='echo "SERVING `pwd` ON http://`ifconfig -v en0 inet | grep inet | cut -d " " -f 2`:9090/" && ruby -run -e httpd . -p9090'

# Rubies
alias 193="rbenv shell 1.9.3-perf"
alias 211="rbenv shell 2.1.1-perf"
alias 179="rbenv shell jruby-1.7.9"

# Generate tags for all installed gems
if [[ -f ~/dev/privat/zsh_config/home/extras/generate_tags_for_gems ]]; then
  alias tags="~/dev/privat/zsh_config/home/extras/generate_tags_for_gems"
fi

# tig
alias t="~/.zsh/modules/tig/start_tig_in_big_iterm_window"

# pipe for us with vim
alias rpipe='mkdir -p tmp && if [ ! -p tmp/rspec-test-pipe ]; then mkfifo tmp/rspec-test-pipe; fi && echo "Now listening to tmp/rspec-test-pipe" && while true; do sh -c "$(cat tmp/rspec-test-pipe)"; done'

alias pu='git push'

alias be='bundle exec'

# Convert videos to mp4 for mobile
alias convert.sh='~/Dropbox/Software/ffmpeg/convert.sh'

# update all important gems
alias update_important_gems="gem update --system && gem install pry-debugger pry-byebug bundler git-up bond wirb spring spring-commands-rspec"


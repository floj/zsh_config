alias ll='ls -la'
alias ..='cd ..'
alias dl='cd ~/Downloads'
alias v='mvim'
alias vim='/usr/local/Cellar/macvim/7.4-71/MacVim.app/Contents/MacOS/Vim'

# Alias gpr to do a rebase (or - if installed - use https://github.com/aanand/git-up)
command -v git-up >/dev/null 2>&1
if [[ "$?" == "0" ]]; then
  alias gpr='git-up && git submodule init && git submodule update'
else
  alias gpr='git pull --rebase'
fi

# Typos
alias gti="git"

# Start a webserver here
alias serve='echo "SERVING `pwd` ON http://`ifconfig -v en0 inet | grep inet | cut -d " " -f 2`:9090/" && ruby -run -e httpd . -p9090'

# Rubies
alias 193="rbenv shell 1.9.3-p125-perf"
alias jruby="rbenv shell jruby-1.6.5"
alias 200="rbenv shell 2.0.0-p247"

# Generate tags for all installed gems
if [[ -f ~/dev/privat/zsh_config/home/extras/generate_tags_for_gems ]]; then
  alias tags="~/dev/privat/zsh_config/home/extras/generate_tags_for_gems"
fi

# tig
alias t="~/.zsh/modules/tig/start_tig_in_big_iterm_window"

# pipe for us with vim
alias rpipe='mkdir -p tmp && if [ ! -p tmp/rspec-test-pipe ]; then mkfifo tmp/rspec-test-pipe; fi && echo "Now listening to tmp/rspec-test-pipe" && while true; do sh -c "$(cat tmp/rspec-test-pipe)"; done'

alias pu='git push'

# start a debugging session with the smartphone
alias android='~/Dropbox/Software/adb forward tcp:9222 localabstract:chrome_devtools_remote && open http://localhost:9222'

alias be='bundle exec'

# vim:ft=sh

# # -*- encoding : utf-8 -*-
fsevent = nil
begin
  fsevent = Gem::Specification.find_by_name("autotest-fsevent") rescue nil
rescue Exception => e
end

require 'autotest/fsevent' if fsevent

# Skip some paths
Autotest.add_hook :initialize do |autotest|
  autotest.add_exception(/\.\/(?!spec).+/)
  autotest.add_exception(/\.\/spec\/?(integration|javascript)/)
  autotest.add_exception(/\.\/spec\/reports\/.*/)
  autotest.add_exception(/.DS_Store/)
end

--ignore-dir=log
--ignore-dir=doc
--ignore-dir=docs
--ignore-dir=vendor/rails
--ignore-dir=db
--ignore-dir=tmp
--ignore-dir=tests/_coverage
--ignore-dir=.sass-cache
--ignore-dir=spec/reports
--ignore-dir=public/assets
--type-add=ruby=.haml,.rake,.rsel,.sass
--type-add=vim=vimrc
--type-add=js=json

--type-set=css=.sass
--type-set=MARKDOWN=.md,.mkd,.markdown
--type-set=RDOC=.rdoc
--type-set=ini=.ini,.cfg

--sort-files

# only available in ack 2.0 (http://search.cpan.org/~petdance/ack-2.00a01/)
# download, extract, perl Makefile.pl && make && sudo make install && sudo perl -MCPAN -e 'install File::Next'
# then vim /usr/local/bin/ack and change "use 5.8.0" (round line 9) to "use 5.008_001" to suppress warnings.
--ignore-file=firstlinematch:/.{200}/
--ignore-file=match:/^tags/

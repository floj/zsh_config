#!/bin/bash

# Update async.zsh
curl -s -L "https://raw.githubusercontent.com/mafredri/zsh-async/master/async.zsh" -o home/.zsh/modules/pure_prompt/async.zsh

# Update z.sh
curl -s -L "https://raw.githubusercontent.com/ericbn/z/master/z.sh" -o home/.zsh/modules/ericbn-z/z.sh

# update adb-sync
curl -s -L "https://raw.githubusercontent.com/google/adb-sync/master/adb-sync" -o home/.zsh/modules/tools/adb-sync
chmod +x home/.zsh/modules/tools/adb-sync 

# First update all submodules to HEAD
git submodule foreach git pull origin master

# Commit
git add home/.zsh/modules/*
git commit -am "Updated modules to the newest version as of `date`" 

echo
echo "Changes in Submodules ..."
echo "-------------------------"
echo
git log -1 -p --oneline | grep "+++" | sed "s/^.*modules\///"
